{
  "name": "kikoeru",
  "version": "<version>",
  "description": "Web media player, specifically for voice works.",
  "main": "src/server/index.jsx",
  "scripts": {
    "build": "webpack --mode production",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "profile": "webpack --mode production --profile --json > webpack-stats.json",
    "scan": "node ./src/server/filesystem/scanner.js",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.js ./**/*.jsx"
  },
  "author": "nortonandrews",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@supercharge/promise-pool": "^3.2.0",
    "cross-env": "^10.1.0",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "htmlparser2": "^10.0.0",
    "knex": "^3.1.0",
    "memorystore": "^1.6.7",
    "natural-orderby": "^5.0.0",
    "node-fetch": "2.x",
    "recursive-readdir": "^2.2.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-jsx": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@reduxjs/toolkit": "^2.11.2",
    "babel-loader": "^10.0.0",
    "babel-plugin-inferno": "^6.8.5",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "file-loader": "^6.2.0",
    "history": "^5.3.0",
    "html-webpack-plugin": "^5.6.6",
    "inferno": "^9",
    "inferno-component": "^7",
    "inferno-create-element": "^9",
    "inferno-redux": "^9.0.10",
    "inferno-router": "^9",
    "less": "^4.5.1",
    "less-loader": "^12.3.0",
    "mini-css-extract-plugin": "^2.10.0",
    "nodemon": "^3.1.11",
    "redux": "^5.0.1",
    "style-loader": "^4.0.0",
    "uikit": "^3.25.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": [
                "kikoeru.tar.gz",
                "kikoeru.zip"
              ]
            }
          ],
          "successComment": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' package.json && npm run build && tar -czf kikoeru.tar.gz dist static package.json package-lock.json config.json && zip kikoeru.zip dist static package.json package-lock.json config.json"
        }
      ]
    ]
  }
}
